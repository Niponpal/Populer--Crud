@model IEnumerable<PMS.ModelVm.PaymentVm>
@{
    int idNo = 1;
}

<a asp-action="CreateOrEdit" asp-controller="Payment" class="btn btn-dark mt-3">Input</a>
<table class="table table-bordered table-responsive" id="PaymentTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>TransId</th>
            <th>Email</th>
            <th>IsPaymentConfirm</th>
            <th>CartItems</th>
            <th>OrderTime</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var itam in Model)
        {
            <tr>
                <td>@idNo</td>
                <td>@itam.TransId</td>
                <td>@itam.Email</td>
                <td>@itam.IsPaymentConfirm</td>
                <td>@itam.CartItems</td>
                <td>@itam.OrderTime</td>
                <td>

                    <a class="btn btn-primary" asp-action="CreateOrEdit" asp-controller="Payment" asp-route-id="@itam.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delted" asp-controller="Payment" onclick="confirm('delete this data')" asp-route-id="@itam.Id">Delted</a>
                    <a class="btn btn-primary" asp-action="Detials" asp-controller="Payment" asp-route-id="@itam.Id">Detials</a>

                </td>
            </tr>
            idNo++;
        }
    </tbody>
</table>


@section Scripts {
    <script>
        new DataTable('#PaymentTable');
    </script>
}


