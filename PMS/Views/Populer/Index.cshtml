@model IEnumerable<PMS.ModelVm.PopularVm>
@{
    int idNo = 1;
}

<a asp-action="CreateOrEdit" asp-controller="Populer" class="btn btn-dark mt-3" type="sumit">Input</a>

<table class="table table-bordered table-responsive" id="PopulerTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>SrlNO</th>
            <th>ProductCode</th>
            <th>Image1</th>
            <th>Image2</th>
            <th>Image3</th>
            <th>Location</th>
            <th>GoogleMap</th>
            <th>SomeDetail</th>
            <th>MoreDetail</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var itam in Model)
        {
            <tr>
                <td>@idNo</td>
                <td>@itam.Name</td>
                <td>@itam.SrlNO</td>
                <td>@itam.ProductCode</td>
                <td>
                    <img class="img-thumbnail" width="50" src="~/Image/@itam.Image1"/>
                </td>
                <td>
                    <img class="img-thumbnail" width="50" src="~/Image/@itam.Image2"/>
                </td>
                <td>
                    <img class="img-thumbnail" width="50" src="~/Image/@itam.Image3"/>
                </td>
                
                <td>@itam.Location</td>
                <td>@itam.GoogleMap</td>
                <td>@itam.SomeDetail</td>
                <td>@itam.MoreDetail</td>
                <td>@itam.Phone</td>
                <td>@itam.Email</td>
                <td>@itam.Price</td>
                <td>
                    <a class="btn btn-primary" asp-action="CreateOrEdit" asp-controller="Populer" asp-route-id="@itam.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delted" asp-controller="Populer" onclick="confirm('are you sure')" asp-route-id="@itam.Id">Delted</a>
                    <a class="btn btn-primary" asp-action="Details" asp-controller="Populer" asp-route-id="@itam.Id">Details</a>
                </td>
            </tr>

            idNo++;
        }
    </tbody>
</table>


@section Scripts {
    <script>
        new DataTable('#PopulerTable');
    </script>
}



